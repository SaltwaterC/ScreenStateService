<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">
  <PropertyGroup>
    <!-- Target -->
    <TargetFramework>net48</TargetFramework>
    <OutputType>WinExe</OutputType>
    <UseWindowsForms>true</UseWindowsForms>

    <!-- Names -->
    <AssemblyName>ScreenStateService</AssemblyName>
    <RootNamespace>ScreenStateService</RootNamespace>

    <!-- Assembly attributes (replacing AssemblyInfo.cs) -->
    <AssemblyTitle>ScreenStateService</AssemblyTitle>
    <Description>Windows service useful for detecting screen events (off/on/dimmed) and log them to Event Viewer</Description>
    <Company>SaltwaterC</Company>
    <Product>ScreenStateService</Product>
    <Copyright>Copyright Â© 2025</Copyright>
    <Trademark></Trademark>
    <AssemblyVersion>1.0.0</AssemblyVersion>
    <FileVersion>1.0.0</FileVersion>

    <!-- COM / GUID -->
    <GenerateComVisibleAttribute>false</GenerateComVisibleAttribute>
    <Guid>daa659e2-12bb-44a0-a4ce-581ecb3b9b78</Guid>

    <!-- Usual desktop bits -->
    <AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
    <Deterministic>true</Deterministic>
  </PropertyGroup>

  <PropertyGroup>
    <EnableDefaultItems>true</EnableDefaultItems>
  </PropertyGroup>

  <PropertyGroup>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <GenerateTargetFrameworkAttribute>false</GenerateTargetFrameworkAttribute>
  </PropertyGroup>

  <!-- Windows Service API -->
  <ItemGroup>
    <Reference Include="System.ServiceProcess" />
  </ItemGroup>

  <!-- Keep App.config -->
  <ItemGroup>
    <None Include="App.config" />
  </ItemGroup>

  <ItemGroup>
    <!-- Make absolutely sure we don't compile generated files -->
    <Compile Remove="obj\**\*.cs" />
    <Compile Remove="bin\**\*.cs" />
    <!-- Optional: keep the items list tidy -->
    <None Remove="obj\**\*" />
    <None Remove="bin\**\*" />
  </ItemGroup>

  <ItemGroup>
    <!-- Stop SDK globs from pulling in the helper's sources -->
    <Compile Remove="InstallerHelper\**\*.cs" />
    <None Remove="InstallerHelper\**\*" />
    <EmbeddedResource Remove="InstallerHelper\**\*" />
  </ItemGroup>

  <!-- Optional: belt-and-braces; keeps default items but excludes that folder -->
  <PropertyGroup>
    <EnableDefaultItems>true</EnableDefaultItems>
    <DefaultItemExcludes>$(DefaultItemExcludes);InstallerHelper\**</DefaultItemExcludes>
  </PropertyGroup>


  <!-- Your prebuild PowerShell -->
  <Target Name="GenerateInstallerProps" BeforeTargets="BeforeBuild">
    <Exec Command="powershell -ExecutionPolicy Bypass -File &quot;$(ProjectDir)GenerateInstallerProps.ps1&quot;" />
  </Target>
</Project>
